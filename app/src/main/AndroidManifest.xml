<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="emp.projektna.basketballTraining">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"

        android:theme="@style/Theme.EmpProjektna">
        <activity android:name=".SearchUser.SearchUserActivity" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".EditProfile.EditProfileActivity" android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Trainings.TrainigsActivity" android:windowSoftInputMode="adjustPan"/>
        <activity
            android:windowSoftInputMode="adjustPan"
            android:name=".SecondMainActivity"
            android:screenOrientation="portrait" />

        <activity
            android:windowSoftInputMode="adjustPan"
            android:name=".LogIn_SignUp.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>